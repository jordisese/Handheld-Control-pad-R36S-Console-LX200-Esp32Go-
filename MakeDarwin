# Makefile for R36S stuff
CFLAGS=-c -Wall -O2
LIBS = -lm
PROG = planets
UNAME_S := $(shell uname -s)
ifeq ($(UNAME_S),Darwin)
INCLUDES = -I. -I/opt/homebrew/include
DEFINES = -DCUSTOMTTF
LDFLAGS = -L/opt/homebrew/lib -lm -lsqlite3  -lSDL2 -lSDL2_ttf -lGLEW -lnova
OUTPATH = .
else
INCLUDES = -I. -I/usr/include
DEFINES = -DK36S
LDFLAGS = -lm -lsqlite3  -lSDL2 -lSDL2_ttf -lGLEW -lGL -lnova
OUTPATH = /roms/esp32go
endif

Esptest: esp32go.c
	gcc esp32go.c kpad.c net.c query.c sdl2utils.c $(DEFINES) -DLANG -g $(LDFLAGS) -o $(OUTPATH)/esp32goESP.exec
	gcc esp32go.c kpad.c net.c query.c sdl2utils.c $(DEFINES) -g $(LDFLAGS) -o $(OUTPATH)/esp32go.exec

clean:
	rm -rf *o $(PROG)
